<view class="container">
  <view class="title-edit">
    <text class="title-label">转盘标题：</text>
    <input class="title-input" 
           type="text" 
           value="{{wheelTitle}}" 
           bindinput="onTitleChange"
           placeholder="请输入转盘标题"/>
  </view>

  <view class="title-row">
    <text>转盘选项</text>
    <text>颜色</text>
    <text>权重</text>
  </view>
  
  <view class="prize-list">
    <view class="prize-item" wx:for="{{prizes}}" wx:key="index">
      <view class="prize-content">
        <input class="prize-name" 
               type="text" 
               value="{{item.name}}" 
               data-index="{{index}}"
               bindinput="onNameChange"
               placeholder="奖品名称"/>
        <input class="prize-weight" 
               type="number" 
               value="{{item.weight}}" 
               data-index="{{index}}"
               bindinput="onWeightChange"
               placeholder="权重"/>
      </view>
      <view class="delete-btn" bindtap="deletePrize" data-index="{{index}}">删除</view>
    </view>
  </view>

  <view class="button-group">
    <button class="add-btn" bindtap="addPrize">添加奖品</button>
    <button class="save-btn" bindtap="savePrizes">保存</button>
  </view>
</view> 