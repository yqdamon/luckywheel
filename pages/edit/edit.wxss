page {
  background: #f7f7f7;
  font-size: 17px;
  line-height: 1.4;
  color: #333;
  font-family: -apple-system, "SF Pro SC","SF Pro Text","SF Pro Icons","PingFang SC","Helvetica Neue","Helvetica","Arial",sans-serif;
}

.container {
  padding: 20px;
  background: #f7f7f7;
  min-height: 100vh;
  box-sizing: border-box;
}

.section {
  background: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
}

.section-header {
  font-size: 15px;
  color: #333;
  font-weight: 500;
  margin-bottom: 10px;
}

.title-input {
  width: 100%;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
  box-sizing: border-box;
}

.prize-list {
  position: relative;
  z-index: 101;
  background: #fff;
  border-radius: 8px;
  padding: 10px;
  margin-bottom: 20px;
}

.prize-item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.prize-item:last-child {
  border-bottom: none;
}

.prize-content {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 10px;
}

.prize-name {
  flex: 2;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
}

.prize-weight {
  flex: 1;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
}

.delete-btn {
  padding: 8px 15px;
  background: #ff4444;
  color: #fff;
  border-radius: 4px;
  font-size: 14px;
  margin-left: 10px;
}

.button-group {
  display: flex;
  gap: 15px;
  padding: 0 10px;
  position: relative;
  z-index: 101;
}

.add-btn, .save-btn {
  flex: 1;
  height: 44px;
  line-height: 44px;
  text-align: center;
  border-radius: 4px;
  font-size: 16px;
}

.add-btn {
  background: #fff;
  color: #576b95;
  border: 1px solid #ddd;
}

.save-btn {
  background: #07c160;
  color: #fff;
}

/* 修复按钮的默认样式 */
button {
  margin: 0;
  padding: 0;
  background: none;
  border: none;
  border-radius: 0;
  font-size: inherit;
  color: inherit;
  line-height: inherit;
}

button::after {
  border: none;
}

.title-row {
  display: flex;
  padding: 10px 20px;
  margin-bottom: 10px;
  color: #333;
  font-size: 15px;
  font-weight: 500;
}

.title-row text {
  flex: 1;
  text-align: left;
}

.title-row text:nth-child(2) {
  flex: 0.5;
  text-align: center;
}

.title-row text:last-child {
  flex: 0.5;
  text-align: right;
}

.title-edit {
  display: flex;
  align-items: center;
  padding: 15px 20px;
  background: #fff;
  border-radius: 8px;
  margin-bottom: 15px;
}

.title-label {
  font-size: 15px;
  color: #333;
  font-weight: 500;
  margin-right: 10px;
}

.title-input {
  flex: 1;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
} 