page {
  background-color: #f7f7f7;
}

.container {
  padding-bottom: 30px;
}

.weui-cells {
  margin-top: 0;
  background-color: #fff;
}

.weui-cells__title {
  margin-top: 16px;
  margin-bottom: 8px;
  padding-left: 16px;
  color: rgba(0, 0, 0, 0.5);
  font-size: 14px;
}

.weui-cell {
  padding: 16px;
  line-height: 1.4;
  font-size: 17px;
  color: rgba(0, 0, 0, 0.9);
  background-color: #fff;
}

.prize-inputs {
  display: flex;
  gap: 12px;
}

.prize-name {
  flex: 2;
}

.prize-weight {
  flex: 1;
}

.delete-btn {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background-color: #fa5151;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  flex-shrink: 0;
  margin-right: 8px;
}

.delete-btn::before {
  content: '';
  position: absolute;
  width: 12px;
  height: 2px;
  background-color: #fff;
  border-radius: 1px;
}

.weui-btn-area {
  margin: 24px 16px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.weui-btn {
  font-weight: 500;
}

button[type="primary"] {
  background-color: #07c160;
}

button[type="default"] {
  background-color: #fff;
  color: #576b95;
}

