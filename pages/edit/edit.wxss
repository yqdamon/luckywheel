  display: flex;
  align-items: center;
  gap: 12px;
  flex: 1;
}

.weight-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2px;
}

.prize-weight {
  width: 100%;
  text-align: center;
}

.weight-percent {
  font-size: 11px;
  color: #999;
  transform: scale(0.95);
  transform-origin: center top;
}

.color-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: none;
}

.color-picker-modal.show {
  display: flex;
  align-items: center;
  justify-content: center;
}

.color-picker-content {
  width: 300px;
  background: #fff;
  border-radius: 12px;
  padding: 20px;
  position: relative;
}

.close-btn {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: #999;
  cursor: pointer;
  z-index: 1;
}

.color-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 10px;
  padding: 10px;
}

.color-item {
  aspect-ratio: 1;
  border-radius: 50%;
  border: 1px solid #eee;
  transition: transform 0.2s;
}

.color-item:active {
  transform: scale(0.9);
}

.color-picker-footer {
  display: flex;
  gap: 12px;
}

.color-picker-footer .weui-btn {
  flex: 1;
  margin: 0;
} 